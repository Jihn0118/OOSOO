<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp">

        <RadioButton
            android:id="@+id/radioBtn_lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Lv. 1 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 2 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 3 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 4 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 5 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 6 "
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioBtn_lv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="false"
            android:foreground="@color/unable_color"
            android:text="Lv. 7 "
            android:textSize="18sp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/island_select_preView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter" />
</LinearLayout>